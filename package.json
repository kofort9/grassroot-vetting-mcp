{
  "name": "nonprofit-vetting-mcp",
  "version": "1.0.0",
  "description": "MCP server for automated grassroots nonprofit vetting using IRS BMF and GivingTuesday 990 XML data",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/kofort9/nonprofit-vetting-mcp.git"
  },
  "homepage": "https://github.com/kofort9/nonprofit-vetting-mcp#readme",
  "bugs": {
    "url": "https://github.com/kofort9/nonprofit-vetting-mcp/issues"
  },
  "scripts": {
    "prepare": "git config core.hooksPath scripts/",
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "verify": "npm run format && npm run build && npm run lint && npm test"
  },
  "keywords": [
    "mcp",
    "nonprofit",
    "grassroot",
    "vetting",
    "propublica",
    "501c3",
    "due-diligence",
    "bonsaei"
  ],
  "author": "",
  "license": "MIT",
  "files": [
    "dist/**/*",
    "package.json",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.23.0",
    "@supabase/supabase-js": "^2.78.0",
    "axios": "^1.13.2",
    "csv-parse": "^6.1.0",
    "dotenv": "^17.2.3",
    "fast-xml-parser": "^5.3.5",
    "sql.js": "^1.13.0",
    "unzipper": "^0.12.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^25.0.0",
    "@types/sql.js": "^1.4.9",
    "@types/unzipper": "^0.10.11",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "@vitest/coverage-istanbul": "^4.0.18",
    "@vitest/coverage-v8": "^4.0.15",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  }
}
